<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashFrag_SrollVIEW"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/day_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="?actionBarSize"
        tools:context=".ui.dashboard.DashboardFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/day_colorPrimary"
            android:minHeight="?actionBarSize"
            app:popupTheme="@style/DayPopupTheme"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round">

                </ImageView>
            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/favTextV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="المفضلة"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/allahNamesTV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="أسماء الله الحسنى"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/duaaFromQuranTV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="أدعية من القرآن الكريم"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/TasbihFromQuranTV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="آيات التسبيح في القرآن الكريم"
            android:textColor="#272727"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/esghfarFromQuranTV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="آيات الاستغفار في القرآن الكريم"
            android:textColor="#272727"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/morning_zkr_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="أذكار الصباح"
            android:textColor="#1B1A1A"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/eveningZKRtv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/day_rounded_bg"
            android:gravity="center"
            android:text="أذكار المساء"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>


    </LinearLayout>

</ScrollView>