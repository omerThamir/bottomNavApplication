<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/day_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingBottom="?actionBarSize"
        tools:context=".ui.dashboard.DashboardFragment">

        <Button
            android:id="@+id/settingBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="setting"></Button>


        <TextView
            android:id="@+id/favTextV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg_for_dahboard_frag"
            android:gravity="center"
            android:text="المفضلة"
            android:textColor="#F1EAEA"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/allahNamesTV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:text="أسماء الله الحسنى"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/duaaFromQuranTV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:text="أدعية من القرآن"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/morning_zkr_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:text="أذكار الصباح"
            android:textColor="#1B1A1A"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/eveningZKRtv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:text="أذكار المساء"
            android:textColor="#1C1C1C"
            android:textSize="20dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"

            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:text="from guran"
            android:textColor="#272727"
            android:textSize="20dp"></TextView>


        <Button
            android:id="@+id/button_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_dashboard"></Button>

    </LinearLayout>

</ScrollView>